<%- include('../partials/header'); %>

<section class="container">
    <div class="row">
        <div class="col">
            <div class="row mt-5">
                <div class="col-6"> 
                    <h1>Boletim dos Alunos</h1>
                </div>
                <div class="col-6">
                    <a href="/cadastrarBoletim" class="btn btn-primary">Cadastrar Notas</a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>Nota1</th>
                            <th>Nota2</th>
                            <th>Nota3</th>
                            <th>Média</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="tabela">
                        <% resultado.forEach(function(aluno){ %>
                        <tr>
                            <td><%= aluno.nome %></td>
                            <td><%= aluno.nota1 %></td>
                            <td><%= aluno.nota2 %></td>
                            <td><%= aluno.nota3 %></td>
                            <td><%= aluno.media %></td>
                            <td>
                                <a class="btn btn-warning" href="/editarBoletim/<%=aluno._id %>">Editar</a>
                                <!-- <a class="btn btn-danger" href="/deletarBoletim/<%=aluno._id %>">Apagar</a> -->
                            <!-- Botão para acionar modal -->
                            <button type="button" class="btn btn-primary" data-toggle="modal"
                            data-target="#ExemploModalCentralizado">
                            Apagar
                        </button>
                    </td>
                </tr>
                <!-- Modal -->
                <div class="modal fade" id="ExemploModalCentralizado" tabindex="-1" role="dialog"
                    aria-labelledby="TituloModalCentralizado" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="TituloModalCentralizado">Atenção
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                    aria-label="Fechar">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Confirma a exclusão do boletim de <%= aluno.nome %>?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-dismiss="modal">Fechar</button>
                                    <a class="btn btn-danger" href="/deletarBoletim/<%=aluno._id %>">Deletar</a>
                            </div>
                        </div>
                    </div>
                </div>
                        
                        <% }) %>
                    </tbody>
                </table>
                <div id="alerta" class="col-12 alert alert-info" style="display: none;">
                    <h1 class="display-5 ">
                        Banco de dados vazio!
                    </h1>
                    
                </div>
                
                
            </div>
        </div>
    </div>
</section>

<%- include('../partials/footer'); %>